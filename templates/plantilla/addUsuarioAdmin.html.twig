{% extends 'base.html.twig' %}

{% block title %}Plantilla{% endblock %}

{% block body %}
<div class="container">
<h1>Crea un nuevo usuario</h1>
    {# {{form(form)}} #}
    {{ form_start(form) }}
    <div class="form-group col-sm-3">
        {{ form_row(form.username) }}
    </div>

    <div class="form-group col-sm-3">
        {{ form_row(form.password) }}
    </div>

    <label for="selectServicios">Servicio</label>
    <div class="form-group col-sm-3">
        <select class="form-select" id="selectServicios" name="selectServicios">
            {% for servicio in servicios %}
                <option value="{{servicio.Nombre}}">{{servicio.Nombre}}</option>
            {% endfor %}
        </select>
    </div>
        {{ form_row(form.enviar) }}
    {{ form_end(form) }}
</div>
{% endblock %}